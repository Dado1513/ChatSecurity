<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageBackgroud"
        android:src="@drawable/backgoround_chat2"
        android:scaleType="fitXY"
        android:alpha="0.1"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Inserisci la email"
    android:textColor="@color/colorPrimary"
    android:textStyle="bold|italic"
    android:textSize="30dp"
    android:gravity="center"
    android:layout_marginTop="25dp"
    />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email_passwordSmarrita"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_button"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/buttonePasswordSmarrita"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/emailPasswordSmarrita"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:hint="@string/hintEmail"
            android:textColor="@color/colorPrimary"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invio Email"
        android:background="@drawable/shape_button"
        android:padding="20dp"
        android:id="@+id/buttonePasswordSmarrita"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>