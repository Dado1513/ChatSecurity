<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="SCEGLI UNA IMMAGINE DEL PROFILO"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentEnd="true"></TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        app:civ_border_color="@color/colorPrimary"
        android:layout_above="@+id/loadImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

    <Button
        android:id="@+id/loadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:text="CARICA IMMAGINE"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="71dp"
        android:layout_marginLeft="30dp"
        android:layout_above="@+id/sendDataToServer"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendDataToServer"
        android:background="@drawable/ic_done_all_black_24dp"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/loadImage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retry"
        android:background="@drawable/ic_navigate_before_black_24dp"
        android:layout_alignTop="@+id/sendDataToServer"
        android:layout_alignStart="@+id/loadImage" />


</RelativeLayout>