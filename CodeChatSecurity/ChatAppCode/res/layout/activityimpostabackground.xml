<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="SCEGLI IMMAGINE SFONDO PER LE CHAT"
        android:textSize="18dp"
        android:id="@+id/textView4ImageChange"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"></TextView>

    <ImageView
        android:id="@+id/imgViewSfondo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/loadImageSfonfo"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/rimuoviImmagineSfondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapebuttondark"
        android:text="RIMUOVI IMMAGINE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_above="@+id/impostaImmagineSfondoButton"
        android:layout_alignEnd="@+id/textView4ImageChange" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/impostaImmagineSfondoButton"
        android:background="@drawable/ic_done_all_black_24dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/rimuoviImmagineSfondo" />

    <Button
        android:id="@+id/loadImageSfonfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapebuttondark"
        android:text="CARICA IMMAGINE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_above="@+id/seekBar"
        android:layout_marginBottom="44dp"
        android:layout_alignStart="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="10"
        android:progress="1"
        android:indeterminate="false"
        android:layout_above="@+id/rimuoviImmagineSfondo"
        android:layout_alignStart="@+id/rimuoviImmagineSfondo"
        android:layout_alignEnd="@+id/textView4ImageChange" />

    <TextView
        android:text="OpacitÃ "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_toStartOf="@+id/imgViewSfondo"
        android:layout_marginBottom="14dp"
        android:id="@+id/textView7" />


</RelativeLayout>