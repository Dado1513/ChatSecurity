<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="CAMBIA IMMAGINE DEL PROFILO"
        android:textSize="30dp"
        android:id="@+id/textView2ImageChange"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"></TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgViewImageChange"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView2ImageChange"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/loadImageImageChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:text="CARICA IMMAGINE"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/imgViewImageChange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendDataToServerImageChange"
        android:background="@drawable/ic_done_all_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/loadImageImageChange"
        android:layout_marginBottom="44dp" />



</RelativeLayout>