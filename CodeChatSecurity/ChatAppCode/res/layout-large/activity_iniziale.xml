<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityIniziale">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageBackgroud"
        android:src="@drawable/backgoround_chat2"
        android:scaleType="fitXY">
    </ImageView>
    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/crypto"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:text="viva manovani"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:orientation="horizontal"

        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="217dp"
            android:layout_height="60dp"

            android:text="@string/buttonRegistrati"
            android:id="@+id/registrati"
            android:textStyle="bold"
            android:layout_marginLeft="65dp"
            android:background="@drawable/shape_button"
            android:padding="10dp"
            android:textColor="#125688"
            android:layout_weight="0.31"
            android:textSize="20dp"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_weight="0.02" />

        <Button
            android:layout_marginRight="65dp"
            android:layout_width="217dp"
            android:padding="10dp"
            android:layout_height="60dp"
            android:text="@string/buttonLogin"
            android:id="@+id/login"
            android:textColor="#125688"
            android:background="@drawable/shape_button"
            android:layout_weight="0.31"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
</RelativeLayout>
