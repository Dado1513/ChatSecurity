<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="CAMBIA IMMAGINE DEL PROFILO"
        android:textSize="25dp"
        android:id="@+id/textViewImageChange"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgViewImageChange"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="250dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary"
        android:layout_below="@+id/textViewImageChange"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/loadImageImageChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:text="CARICA IMMAGINE"
        android:textStyle="bold"

        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/imgViewImageChange"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendDataToServerImageChange"
        android:background="@drawable/ic_done_all_black_24dp"
        android:layout_below="@+id/loadImageImageChange"
        android:layout_alignEnd="@+id/loadImageImageChange"
        android:layout_marginTop="20dp" />



</RelativeLayout>