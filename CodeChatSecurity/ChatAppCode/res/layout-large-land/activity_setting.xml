<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/settingImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        app:civ_border_color="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="111dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="CAMBIA IMMAGINE"
        android:id="@+id/changeImage"
        android:background="@drawable/shape_button"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/changeState"
        android:layout_alignStart="@+id/changeState" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="CAMBIA STATO"
        android:background="@drawable/shape_button"
        android:id="@+id/changeState"
        android:layout_marginEnd="76dp"
        android:layout_alignTop="@+id/settingImage"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="CAMBIA PASSWORD"
        android:id="@+id/changePassword"
        android:background="@drawable/shape_button"
        android:layout_below="@+id/changeImage"
        android:layout_alignStart="@+id/changeImage"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="IMPOSTA IMMAGINE SFONDO"
        android:id="@+id/changeBackground"
        android:background="@drawable/shape_button"
        android:layout_alignBottom="@+id/settingImage"
        android:layout_alignStart="@+id/changePassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/darkgrey"
        android:id="@+id/statePersonal"
        android:textSize="25dp"
        android:textStyle="italic"
        android:layout_below="@+id/settingImage"
        android:layout_alignStart="@+id/settingImage"
        android:layout_marginTop="33dp"
        android:layout_alignEnd="@+id/settingImage"
        android:gravity="center"/>


</RelativeLayout>