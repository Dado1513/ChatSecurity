<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageBackgroud"
        android:src="@drawable/backgoround_chat2"
        android:scaleType="fitXY"
        android:alpha="0.1"
        />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputNewPasswordLayout"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:gravity="center"
        android:background="@drawable/shape_button"
        android:layout_marginBottom="154dp"

        android:layout_above="@+id/inputConfermaNewPasswordLayout"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignEnd="@+id/textView6">
        <EditText
            android:id="@+id/inputNewPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:hint="Password"
            android:textColor="@color/colorPrimary"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputConfermaNewPasswordLayout"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:gravity="center"
        android:background="@drawable/shape_button"
        android:layout_above="@+id/buttonCSendPassword2"
        android:layout_alignStart="@+id/inputNewPasswordLayout"
        android:layout_marginBottom="154dp"
        android:layout_alignEnd="@+id/inputNewPasswordLayout">
        <EditText
            android:id="@+id/inputConfermaNewPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:textColorHint="@color/colorPrimary"
            android:hint="Conferma Password"
            android:textColor="@color/colorPrimary"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Inserisci una nuova Password"
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:textStyle="bold|italic"

        android:gravity="center"
        android:layout_above="@+id/inputNewPasswordLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFERMA"

        android:background="@drawable/shapebuttondark"
        android:textColor="@color/white"
        android:id="@+id/buttonCSendPassword2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/inputConfermaNewPasswordLayout"
        android:layout_marginBottom="303dp"
        android:layout_alignEnd="@+id/inputConfermaNewPasswordLayout" />

</RelativeLayout>