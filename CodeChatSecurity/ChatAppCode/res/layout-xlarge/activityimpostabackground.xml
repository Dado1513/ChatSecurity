<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="SCEGLI IMMAGINE DI SFONDO PER LE CHAT"
        android:textSize="25dp"
        android:id="@+id/textView4ImageChange"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"></TextView>

    <ImageView
        android:id="@+id/imgViewSfondo"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_below="@+id/textView4ImageChange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp" />

    <Button
        android:id="@+id/rimuoviImmagineSfondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapebuttondark"
        android:text="RIMUOVI IMMAGINE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@+id/loadImageSfonfo"
        android:layout_marginTop="86dp"
        android:layout_alignEnd="@+id/loadImageSfonfo"
        android:layout_alignStart="@+id/loadImageSfonfo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/impostaImmagineSfondoButton"
        android:background="@drawable/ic_done_all_black_24dp"
        android:layout_below="@+id/rimuoviImmagineSfondo"
        android:layout_alignEnd="@+id/rimuoviImmagineSfondo"
        android:layout_marginTop="67dp" />

    <Button
        android:id="@+id/loadImageSfonfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapebuttondark"
        android:text="CARICA IMMAGINE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@+id/imgViewSfondo"
        android:layout_marginTop="121dp"
        android:layout_alignEnd="@+id/imgViewSfondo"
        android:layout_alignStart="@+id/imgViewSfondo" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="10"
        android:progress="1"
        android:indeterminate="false"
        android:layout_below="@+id/loadImageSfonfo"
        android:layout_alignStart="@+id/loadImageSfonfo"
        android:layout_marginTop="40dp"
        android:layout_alignEnd="@+id/loadImageSfonfo" />

    <TextView
        android:text="OpacitÃ "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loadImageSfonfo"
        android:layout_alignStart="@+id/seekBar"
        android:id="@+id/textView11"
        android:layout_marginTop="10dp" />


</RelativeLayout>